rule "Włącz choinkę rano"
when
	Time cron "0 30 07 1/1 * ? *"
then		
	if (Mode.state == "Normal" && XMass_Tree.state == OFF) {
		sendCommand(XMass_Tree, ON)
	}
end

rule "Włącz światła balkonowe wieczorem"
when
	Time cron "0 00 17 1/1 * ? *"
then		
	if (Mode.state == "Normal" && XMass_Balkony.state == OFF) {
		sendCommand(XMass_Balkony, ON)
	}
end
