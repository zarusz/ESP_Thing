{
    "title": "Włacz zasilanie halogenów, jeżeli którykolwiek halogen został właczony",
    "type": "rule",
    "trigger": {
        "type": "featureChanged",
        "featureType": "switch",
        "featureRefs": [
            "dev_sufit:10",
            "dev_sufit:11",
            "dev_sufit:12",
            "dev_sufit:13"
        ]
    },
    "action": {
        "type": "if",
        "when": {
            "type": "isSwitchOff",
            "featureRef": "dev_sufit:1"
        },
        "then": {
            "type": "switchOn",
            "featureRef": "dev_sufit:1"
        }
    }
}
